#!/bin/sh
# prerm script for lubuntu-grub-theme

set -e

#DEBHELPER#

case "$1" in
    remove|upgrade|deconfigure)
	rm /etc/default/grub.d/lubuntu-grub-theme.cfg
	update-grub
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0
