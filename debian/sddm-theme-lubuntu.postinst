#!/bin/sh
set -e

if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-remove" ]; then
    update-alternatives --install \
        /usr/share/sddm/themes/breeze \
        breeze \
        /usr/share/sddm/themes/lubuntu 20
fi

# Tag to allow some debhelper commands to inject relevant code
#DEBHELPER#
