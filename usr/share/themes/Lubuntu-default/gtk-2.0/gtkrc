gtk_color_scheme = "fg_color:#3C3C3C\nselected_fg_color:#f5f5f5\ntext_color:#3C3C3C"
gtk_color_scheme = "tooltip_bg_color:#000000\ntooltip_fg_color:#E1E1E1"
